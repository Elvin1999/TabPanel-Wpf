<Window x:Class="TabPanel.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TabPanel"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="400">
    <Grid Background="Aqua">

        <StackPanel Orientation="Horizontal">
            <TabControl Margin="10,10,0,0">
                <TabItem Header="Grammar" Background="Yellow">
                    <TextBlock>Initial clock</TextBlock>
                </TabItem>
                <TabItem Header="Speaking" Background="Red">
                    <TextBlock>End clock</TextBlock>
                </TabItem>
            </TabControl>
        </StackPanel>
        
    </Grid>
</Window>
